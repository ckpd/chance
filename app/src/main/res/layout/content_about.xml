<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.islandcode.ckpd.chance.AboutActivity"
    tools:showIn="@layout/activity_about">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/font"
        android:text="Disclaimer \n we are in no way affilated with, authorized, maintained, sponsored or endoresed by the Grenada Lottrey Authority. This is an independent, unoffical app. All information(including winning numbers) provided must be verified on the NLA website or from an official NLA representative. Visitors should not act upon the content or information without first seeking appropriate professional advice"
        android:id="@+id/textView"
        android:lineSpacingMultiplier="1.2"

        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/app_version"
        android:textColor="@color/font"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif"
        />


    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:textColor="@color/font"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:text="Any concerns or questions about the development of this app please contact us at \n Email islandcodegnd@gmail.com \n Address Marrast Hill \n St. Geo \n Grenada W.I. \n telephone 473-405-5738"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:fontFamily="sans-serif"
        />



</android.support.constraint.ConstraintLayout>
